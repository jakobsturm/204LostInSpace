            FontWeight="Bold"
            FontSize="90"
            Foreground="White"
            TextAlignment="Center"
            >                
                <Image Source="/Images/fuel.png" Width="180" Height="180"/>
                1x
            </TextBlock>
        </Button>
            <Button Width="300" Height="300" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderThickness="10" BorderBrush="White" Margin="30" Click="Button_Click_1">
